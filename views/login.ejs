<%- include('includes/head.ejs', {username: username}) %>
<section class="section">
    <div class="container">
        <h1 id="title" class="title"><% if (registrar) { %>¡Bienvenido!<% } else { %>¡Hola de nuevo!<% } %></h1>
        <form action="/users/<% if (registrar) { %>signup <% } else { %>login <% } %>" method="POST">
            <label class="label" for="username">Nombre de Usuario</label>
            <input name="username" class="input" type="text" id="username"><br>
            <label class="label" for="password">Contraseña</label>
            <input name="password" class="input" type="password" id="password"><br><br>
            <input class="button is-success" type="submit"
                value="<% if (registrar) { %>Registrarse <% } else { %>Log in <% } %>">
        </form>
    </div>
    <br>
    <div class="block">
        <figure>
            <img id="imagen_disparar" src="">
        </figure>
    </div>
</section>
<%- include('includes/foot.ejs') %>